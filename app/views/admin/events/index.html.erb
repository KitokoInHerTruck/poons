<p style="color: green"><%= notice %></p>

<h1>Liste des concours</h1>

<div id="Concours">
  <% @events.each do |event| %>
    <%= render event %>
    <p>
      <%= link_to "Voir ce concours", show_event_path(event) %>

    </p>
    <h2>Participants :</h2>
    <ul>
      <% event.attendees.each do |attendee| %>
        <li><%= attendee.name %></li>
      <% end %>
    </ul>
  <% end %>
</div>


