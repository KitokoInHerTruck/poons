  <center><h1>Nouveau concours</h1>

<%= form_for @event, url: admin_events_path, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :Concours, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :Description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :Date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :start_time, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :"Nombre de jours", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :duration, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :Prix, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :price, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :Lieu, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :location, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Concours créé", class: "btn btn-primary" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

<% end %></center>
