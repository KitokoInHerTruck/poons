  <h1>Nouveau concours</h1>

  <%= render "form", event: @event %>
  
  
  
  
  <%= form_for @event, url: admin_events_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :date_time %>
  <%= f.datetime_select :date_time %>

  <%= f.label :duration %>
  <%= f.integer :duration %>

  <%= f.label :price %>
  <%= f.integer :price %>

   <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.submit "Create Event" %>
<% end %>





<div>
  <%= link_to "Back to events", admin_events_path %>
</div>
